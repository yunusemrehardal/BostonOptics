@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="row g-5">
    <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-primary">Your cart</span>
            <span class="badge bg-primary rounded-pill">@Model.Basket!.TotalItems</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Basket!.Items)
            {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">@item.ProductName</h6>
                        <small class="text-muted">@item.UnitPrice.ToString("c2") &times; @item.Quantity</small>
                    </div>
                    <span class="text-muted">@item.TotalPrice.ToString("c2")</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Total</span>
                <strong>@Model.Basket.TotalPrice.ToString("c2")</strong>
            </li>
        </ul>
    </div>
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Shipping address</h4>
        <form method="post">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Street" class="form-label"></label>
                    <input asp-for="Street" type="text" class="form-control" placeholder="1234 Main St">
                    <div class="text-danger">
                        <span asp-validation-for="Street"></span>
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" type="text" class="form-control">
                    <div class="text-danger">
                        <span asp-validation-for="City"></span>
                    </div>
                </div>

                <div class="col-md-5">
                    <label asp-for="Country" class="form-label"></label>
                    <select asp-for="Country" class="form-select">
                        <option value="">Choose...</option>
                        <option>Turkey</option>
                        <option>United States</option>
                    </select>
                    <div class="text-danger">
                        <span asp-validation-for="Country"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <label asp-for="State" class="form-label"></label>
                    <select asp-for="State" class="form-select">
                        <option value="">Choose...</option>
                        <option>California</option>
                    </select>
                    <div class="text-danger">
                        <span asp-validation-for="State"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label asp-for="ZipCode" class="form-label"></label>
                    <input asp-for="ZipCode" type="text" class="form-control" placeholder="">
                    <div class="text-danger">
                        <span asp-validation-for="ZipCode"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <h4 class="mb-3">Payment</h4>

            <div class="row gy-3">
                <div class="col-md-6">
                    <label asp-for="CCHolder" class="form-label"></label>
                    <input asp-for="CCHolder" type="text" class="form-control" placeholder="">
                    <small class="text-muted">Full name as displayed on card</small>
                    <div class="text-danger">
                        <span asp-validation-for="CCHolder"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="CCNumber" class="form-label"></label>
                    <input asp-for="CCNumber" type="text" class="form-control" placeholder="">
                    <div class="text-danger">
                        <span asp-validation-for="CCNumber"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label asp-for="CCExpiration" class="form-label"></label>
                    <input asp-for="CCExpiration" type="text" class="form-control" id="cc-expiration" placeholder="07/29">
                    <div class="text-danger">
                        <span asp-validation-for="CCExpiration"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label asp-for="CCCvv" class="form-label"></label>
                    <input asp-for="CCCvv" type="text" class="form-control" placeholder="123">
                    <div class="text-danger">
                        <span asp-validation-for="CCCvv"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Complete Payment</button>
        </form>
    </div>
</div>